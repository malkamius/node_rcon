{
  "compilerOptions": {
    "types": ["react", "react-dom", "node"],
    "target": "ES2020",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist/frontend",
    "rootDir": "./src/frontend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/frontend/**/*"]
}
