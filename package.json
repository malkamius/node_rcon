{
  "name": "rcon-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:backend": "tsc -p tsconfig.backend.json",
    "postbuild:backend": "copy src\\backend\\*.ps* dist\\backend\\ & copy *.ps* dist\\backend\\",
    "build:frontend": "tsc -p tsconfig.frontend.json && webpack --config webpack.frontend.js",
    "build": "npm run build:backend && npm run postbuild:backend && npm run build:frontend",
    "start": "node dist/backend/server.js",
    "postinstall": "npm run build && powershell -NoProfile -ExecutionPolicy Bypass -File ./Register-AllTasks.ps1"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "express": "^4.18.2",
    "portscanner": "^2.2.0",
    "rcon-client": "^4.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@homebridge/node-pty-prebuilt-multiarch": "^0.13.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.62",
    "@types/react-dom": "^18.2.19",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@types/xterm": "^2.0.3",
    "css-loader": "^7.1.2",
    "jest": "^30.0.3",
    "style-loader": "^4.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
